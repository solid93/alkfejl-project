{% extends 'master' %}

{% block content %}
  <div class="container">
    <form class="form-signin" role="form" method="POST" action="/account/login">

      <h2 class="form-signin-heading">Bejelentkezés</h2>

      {% if errorMessage %}
      <div class="bg-danger text-white text-xs-center ma-3 pa-3">
        {{ errorMessage }}
      </div>
      {% endif %}

      {% if successMessage %}
      <div class="bg-success text-white text-xs-center ma-3 pa-3">
        {{ successMessage }}
      </div>
      {% endif %}

      {{ csrfField }}

      <label for="email" class="sr-only">Email cím</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="Email cím" required>

      <label for="password" class="sr-only">Jelszó</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="Jelszó" required>
      
      <button class="btn btn-lg btn-primary btn-block" type="submit">Bejelentkezés</button>
    
    </form>
  </div>
{% endblock %}