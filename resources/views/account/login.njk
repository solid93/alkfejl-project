{% extends 'master' %}

{% block content %}

  {{ form.open({action: 'AuthController.login', class: 'form-signin' }) }}

    <h2 class="form-signin-heading">Bejelentkezés</h2>

    {% if errorMessage %}
      <div class="bg-danger text-white text-xs-center my-1 p-1">
        {{ errorMessage }}
      </div>
      {% endif %}

      {% if successMessage %}
      <div class="bg-success text-white text-xs-center my-1 p-1">
        {{ successMessage }}
      </div>
    {% endif %}

    {{ csrfField }}

    <div class="form-group">
      {{ form.text('email', null, { class: 'form-control', placeholder: 'Email cím' }) }}
    </div>

    <div class="form-group">
      {{ form.password('password', null, { class: 'form-control', placeholder: 'Jelszó' }) }}
    </div>

    {{ form.submit('Bejelentkezés', 'login', { class: 'btn btn-lg btn-primary btn-block' }) }}

  {{ form.close() }}

{% endblock %}