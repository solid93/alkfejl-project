{% extends 'master' %}

{% block content %}
  <div class="container">
    <form class="form-signin" role="form" method="POST" action="/account/register">

      <h2 class="form-signin-heading">Regisztráció</h2>

      {{ csrfField }}

      <label for="name" class="sr-only">Név</label>
      <input type="text" id="name" name="name" class="form-control" placeholder="Név" required autofocus>

      <label for="email" class="sr-only">Email cím</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="Email cím" required>

      <label for="password" class="sr-only">Jelszó</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="Jelszó" required>
      
      <button class="btn btn-lg btn-primary btn-block" type="submit">Regisztráció</button>
    
    </form>
  </div>
{% endblock %}