{% extends 'master' %}

{% block content %}

  <h1>Jogosultság törlése</h1>

  {% if old('errors') %}
    <div class="bg-danger text-white text-xs-center m-1 p-1">
      {% for error in old('errors') %}
        <li> {{ error.message }} </li>
      {% endfor %}
    </div>
  {% endif %}

  {{ form.open({action: 'RoleController.remove'}) }}

    {{ csrfField }}

    {{ form.hidden('id', role.id) }}

    <div class="form-group">
      {{ form.label('Jogosultság neve') }}
      {{ form.text('title', role.title, { class: 'form-control', disabled: 'disabled' }) }}
    </div>

    <div class="form-group">
      {{ form.label('Jogosultság rövid leírása') }}
      {{ form.text('details', role.details, { class: 'form-control', disabled: 'disabled' }) }}
    </div>

    <div class="form-group">
      {{ form.label('Kik vannak a jogosultságban?') }}
      {{ form.select('users[]', users, selected_users, null, { class: 'form-control', multiple: 'multiple', disabled: 'disabled' }) }}
    </div>

    {{ form.submit('Törlés', 'publish', { class: 'btn btn-lg btn-danger btn-block' }) }}

  {{ form.close() }}

  <p class="mt-1"><a href="/roles">Vissza</a></p>

{% endblock %}